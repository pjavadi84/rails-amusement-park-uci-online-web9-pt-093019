<%= form_tag('/session', method: :post) do %>
    <div class="form_group">
        <%= label_tag(:name, "Enter your name:") %>
        <%= collection_select(:user, :name, User.all, :name, :name, prompt: "Please select your username") %>
    </div>

    <div class="form_group">
        <%= label_tag(:password, "Enter your password: ") %>
        <%= password_field_tag(:password, nil, class: "form_control") %>
    </div>

    <div class="action">
        <%= submit_tag("Sign In") %>
    </div>

<% end %>